[user]
    name = Alexandre Jacquin
    email = alexandre.jacquin@canaltp.fr

[color]
    ui = auto
[push]
	default = nothing
[alias]
	glog = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --boundary
	st = status -sb
	wdiff = diff --word-diff
	cdiff = diff --cached
	padd = add -p
    changelog = log --pretty=format:'%h - %an, %ar: %s'
    cancel-commit = reset HEAD^
    pr = "!f() { git fetch -fu ${2:-canaltp} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
    please = push --force-with-lease
    tags = tag -l
    branches = branch -a
    remotes = remote -v

[pull]
	rebase = true
[core]
	whitespace = trailing-space

[diff "localizablestrings"]
    textconv = "iconv -f utf-16 -t utf-8"
[diff]
	compactionHeuristic = true
    renames = copies
[merge]
    log = true
