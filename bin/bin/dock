#!/bin/bash
set -e
VIEW=$(xrandr)
#xrandr --output DP1-2 --auto --right-of eDP1 --primary
if $(echo $VIEW | grep -q 'DP2-2 connected') && $(echo $VIEW | grep -q 'DP1-1 connected');
then
    xrandr --output DP2-2 --auto --right-of eDP1 --primary
    xrandr --output DP1-1 --auto --right-of DP2-2
fi

if $(echo $VIEW | grep -q 'DP1-2 connected') && $(echo $VIEW | grep -q 'DP2-1 connected');
then
    xrandr --output DP1-2 --auto --right-of eDP1 --primary
    xrandr --output DP2-1 --auto --right-of DP1-2
fi
#xrandr --output eDP1  --auto
#xrandr --output eDP1 --off

# we may need to restore keyboard configuration
#setxkbmap fr,gb -variant oss,extd -option  -option 'caps:nocaps' -option 'caps:ctrl_modifier' -option grp:sclk_toggle -option grp_led:scroll
